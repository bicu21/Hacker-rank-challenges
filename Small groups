# Simple calculator 
def calculator (a,b, operator):
    if operator ==  '+':
        print(a + b)
    elif operator == '-':
        print(a - b)
    elif operator == '*':
        print(a * b)
    elif operator == '/':
        print(a / b)
    else:
        print("null")

operator = ((input(" Enter the operator (+, -, *, /): ")))
a = float(input("Enter the first number:"))
b  = float(input("Enter the second number:"))


calculator (a, b, operator)
